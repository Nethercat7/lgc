<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lightning.lgc.core.dao.PostsMgtDao">
    <insert id="addPosts" parameterType="Posts">
        INSERT INTO posts(posts_id,posts_title,posts_title_img,posts_content,posts_author)
        VALUES (#{postsId},#{postsTitle},#{postsTitleImg},#{postsContent},#{postsAuthor})
    </insert>

    <select id="getPosts" resultType="Posts">
        SELECT * FROM posts;
    </select>

    <update id="updPosts" parameterType="Posts">
        UPDATE posts
        SET posts_title=#{postsTitle},posts_title_img=#{postsTitleImg},posts_content=#{postsContent}
        WHERE posts_id=#{postsId}
    </update>

    <select id="getPostsById" parameterType="String" resultType="Posts">
        SELECT * FROM posts
        WHERE posts_id=#{id}
    </select>

    <delete id="delPosts" parameterType="String">
        DELETE FROM posts
        WHERE posts_id=#{id}
    </delete>
</mapper>